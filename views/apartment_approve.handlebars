{{> header_apartment}}

<div class="container-fluid">
    <div class="row profile">
    {{> apart_side}}

		<div class="col-md-9">
            <div class="profile-content">
        		<div class="bg-danger budget text-center fixed-top">
		   		Budget: {{#each apartment}} {{this.budget}} {{/each}}
		   		</div>

		   		<h2 class="h2 text-center"><b>Approving</b></h2>
		   		<div class="win-history tab-pane fade in active" id="transfer_his" style="padding: 10px;">
					
					<table class="table table-striped table-inverse">
						<thead>
							<tr>
								<th class="text-center">Date/Time </th>
								<th class="text-center">Person</th>
								<th class="text-center">Amount</th>
								<th class="text-center">Reason</th>
								<th class="text-center">Recipient</th>
								<th class="text-center">Dis/Approve</th>
								<th class="text-center">Approve</th>
							</tr>
						</thead>
						<thead>
							{{#each trans_apart}}
								<tr class="text-center">
									<td scope="row">{{dateFormat this.date}}</td>
									<td>{{this.sender}}</td>	
									<td>{{this.amount}}</td>
									<td>{{this.reason}}</td>
									<td>{{this.recipient}}</td>
									<td>{{this.num_disapprove}}/{{this.num_approve}}</td>

									<td>
									
									{{#ifCondA this.num_approve '>=' 3}} 
										Success!
									{{else ifCondA this.num_disapprove '>=' 2}}
										Fail
									{{else}}
										{{#finding this.email_logs ../user_email }}

											{{this.email_logs}}
										{{else}}
											<form method="post" action="/apartment_list/approve/{{this.id}}">
												<button type="submit" name="status" value="accept">Accept</button>
												<button type="submit" name="status" value="deny">Deny</button>
											</form>
										{{/finding}}
									{{/ifCondA}}
									</td>
								</tr>
								
							{{/each}}
							
							<!--{{this.email_logs}}
							</br></br> {{user._json.email}}-->
						</thead>
					</table>
					
				</div>
		   	</div>
		</div>
	</div>
</div>
</br>	
{{> apartment_js}}
{{> apartment_css}}