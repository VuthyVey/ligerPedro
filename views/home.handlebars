<body id="page-top">
    {{> navigation}}
    <header>
        <div class="header-content">
            <div class="header-content-inner">
                <h1 id="homeHeading">LIGER DIGITAL CURRENCY</h1>
                <hr>
                <p>Liger Learning Center</p>
                <hr>
                {{#if user}}
                    <h2 class="header-content-inner">Welcome! {{user.displayName}}</h2>
                {{/if}}
            </div>
        </div>
    </header>

    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Know More About</h2>
                    <hr class="primary">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <a href=/about_us>
                        <i class="fa fa-4x fa-diamond text-primary sr-icons"></i>
                        <h3>About Us</h3>
                        <p class="text-muted">Know more about who we are.</p>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <a href="#exchanging_system">
                        <i class="fa fa-4x fa-paper-plane text-primary sr-icons"></i>
                        <h3>Exchanging System</h3>
                        <p class="text-muted">Learn how does exchanging system work.</p>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <a href="#tutorial">
                        <i class="fa fa-4x fa-newspaper-o text-primary sr-icons"></i>
                        <h3>Tutorial</h3>
                        <p class="text-muted">Understand how does the system is working.</p>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <a href="#Login">
                        <i class="fa fa-4x fa-user text-primary sr-icons"></i>
                        {{#if user}}
                        <a href="/logout"><h3>Logout</h3></a>
                        {{else}}
                        <a href="#" onclick="signinGoogle()"><h3>Login via Google</h3></a>
                        {{/if}}
                        <p class="text-muted">Visit your account to do your business.</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <aside class="bg-dark">
        <div class="container text-center">
            <div class="call-to-action">
                <h2>LIGER DIGITAL CURRENCY</h2>
                <a href="http://www.ligerlearning.org/" class="btn btn-default btn-xl sr-button" target="_blank">Liger Learning Center!</a>
            </div>
        </div>
    </aside>

    <!-- jQuery -->
    <script src="/vendor/jquery/jquery.min.js"></script>


    <!-- Plugin JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="/vendor/scrollreveal/scrollreveal.min.js"></script>
    <script src="/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>

    <!-- Theme JavaScript -->
    <script src="/js/creative.min.js"></script>
    <script>
        var auth0 = new Auth0({
            domain: '{{env.AUTH0_DOMAIN}}',
            clientID: '{{env.AUTH0_CLIENT_ID}}',
            callbackURL: '{{env.AUTH0_CALLBACK_URL}}'
        });

        function signinGoogle(){
            console.log("hello")
            auth0.signin({
                connection: 'google-oauth2',
            });
        }
    </script>
</body>