{{> header_apartment}}

<div class="container-fluid">
    <div class="row profile">
		{{> apart_side}}

		<div class="col-md-9">
      <div class="profile-content">
        <div class="bg-danger budget text-center fixed-top">
		   		Budget: {{#each apartmentData}} {{this.budget}} {{/each}}
		   	</div>

		   	<div class=	"body-apartment text-center">
			   	<h1 class="h2">History of Transfering</h1>
 	        <div class="win-history tab-pane fade in active" id="transfer_his" style="padding: 10px;">
          
          <table class="table table-striped table-inverse">
            <thead>
              <tr>
                <th class="text-center">Date/Time</th>
                <th class="text-center">Person</th>
                <th class="text-center">Amount</th>
                <th class="text-center">Reason</th>
                <th class="text-center">Recipient</th>
                <th class="text-center">Resulting Budget</th>
              </tr>
            </thead>
            <thead>
              {{#each trans_apart}}
               
                <tr class="text-center">
                  <td scope="row">{{dateFormat this.date}}</td>
                  <td>{{this.sender}}</td>  
                  <td>{{this.amount}}</td>
                  <td>{{this.reason}}</td>
                  <td>{{this.recipient}}</td>
                  <td>{{this.sender_resulting_budget}}</td>
                </tr>
                
              {{/each}}
              
              <!--{{this.email_logs}}
              </br></br> {{user._json.email}}-->
            </thead>
          </table>
          
        </div>
        </div>
			  </div>
      </div>
		</div>
	</div>
</div>
