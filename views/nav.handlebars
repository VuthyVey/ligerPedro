    <!--Body-->
    <div id="center-body">
        <div class="container text-center" id="win-transfer">
          <h1 class="h1">Transfering Money</h1>
          </br>
          <button button="button" class="btn btn-primary">Your budget <span class="badge">P250</span></button>
            </br>
            </br>
            <form class="form-inline">
              <div class="form-group">
                   <div class="input-group">
                      <div class="input-group-addon">P</div>
                      <input type="text" class="form-control" id="exampleInputAmount" placeholder="Amount">
                   </div>

                   <div class="input-group">
                      <div class="input-group-addon">@</div>
                      <input type="text" class="form-control" id="exampleInputAmount" placeholder="Account">
                   </div>                             
              </div>
            </form>
            </br>
            <button type="button" class="btn btn-info col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-2 col-lg-offset-5">Send <span class="glyphicon glyphicon-send"></span></button>
        </div>

        <div class="container text-center" id="win-exchange" hidden="true">
          <h1 class="h1">Exchanging Money</h1>
          <ul class="nav nav-pills nav-justified btn-lg">
            <li  class="active"><a data-toggle="pill" href="#ex_p_d"><span class="btn-lg">$</span> Pedro-Dollar</a></li>
            <li><a data-toggle="pill" href="#ex_d_p"><span class="btn-lg">P</span>  Dollar-Pedro</a></li>
          </ul>
          <div class="tab-content">
            <div id="ex_p_d" class="tab-pane fade in active">
              <form class="form-inline">
                <div class="input-group">
                    <div class="input-group-addon">P</div>
                    <input type="text" class="form-control" id="exampleInputAmount" placeholder="Amount">
                </div>
                <div class="input-group">
                    <div class="input-group-addon">$</div>
                    <input type="text" class="form-control" id="exampleInputAmount" placeholder="Result">
                </div>
                </br>
                </br>
                <button class="btn btn-submit btn-info col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-2 col-lg-offset-5">Exchange</button>
                </br>
                </br>
              </form>
            </div>

            <div id="ex_d_p" class="tab-pane fade">
              <form class="form-inline">
                <div class="input-group">
                    <div class="input-group-addon">$</div>
                    <input type="text" class="form-control" id="exampleInputAmount" placeholder="Amount">
                </div>

                <div class="input-group">
                    <div class="input-group-addon">P</div>
                    <input type="text" class="form-control" id="exampleInputAmount" placeholder="">
                </div>
                </br>
                </br>
                <button class="btn btn-submit btn-info col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-2 col-lg-offset-5">Exchange</button>
                </br>
                </br>
              </form>
            </div>
          </div>
        </div>

        <div class="container" id="win-history" hidden="true">
            <h1 class="h1 text-center">History</h1>

            <div class="table-responsive">
              <table class="table">
                <thead class="thead-inverse">
                  <tr>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Amount (P)</th>
                    <th>Person</th>
                    <th>Email</th>
                  </tr>
                </thead>
                
                  <tbody>
                {{#each results}}
                  <tr>
                    <td>{{this.date}}</td>
                    <td>{{this.status}}</td>
                    <td>{{this.amount}}</td>
                    <td>{{this.person}}</td>
                    <td>{{this.email}}</td>
                  </tr>
                {{/each}}
                 </tbody>
                </table>
            </div>
        </div>
    </div>

