    <script type="text/javascript">
        $("#nav-transfer").on("click", function (event){
            $("#win-transfer").show();
            $("#win-exchange").hide();
            $("#win-history").hide();
        });
        $("#nav-exchange").on("click", function (event){
            $("#win-exchange").show();
            $("#win-history").hide();
            $("#win-transfer").hide();
        });
        $("#nav-history").on("click", function (event){
            $("#win-history").show();
            $("#win-transfer").hide();
            $("#win-exchange").hide();
        });
    </script>
